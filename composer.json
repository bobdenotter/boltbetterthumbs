{
  "name": "cdowdy/betterthumbs",
  "description": "A Bolt Extension For Better Thumbnails and responsive images using Glide.",
  "type": "bolt-extension",
  "keywords": [ "responsive images", "srcset", "HTML5 srcset", "Secure Thumbnails", "thumbnail", "thumbnail security", "ImageMagick", "imagick", "change Image format"],
  "require": {
    "bolt/bolt": "^3.0"

  },
  "require-dev": {
    "phpunit/phpunit": "^4.7"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Cory Dowdy",
      "email": "cory@corydowdy.com"
    }
  ],
  "minimum-stability" : "dev",
  "prefer-stable" : true,
  "autoload": {
    "psr-4": {
      "Bolt\\Extension\\cdowdy\\betterthumbs\\": [ "",
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bolt\\Extension\\cdowdy\\betterthumbs\\Tests\\": "tests",
      "Bolt\\Tests\\": "vendor/bolt/bolt/tests/phpunit/unit/"
    }
  },
  "extra": {
    "bolt-assets": "web",
    "bolt-class": "Bolt\\Extension\\cdowdy\\betterthumbs\\BetterThumbsExtension",
    "bolt-icon": "betterthumbs-icon.png",
    "bolt-screenshots": [
      "screenshots/screenshot1.png",
      "screenshots/screenshot2.png"
    ]
  }
}
