{#
    gather the class array from the template or the config file and loop
    over the contents in the array
#}
{% macro htmlClasses( classes ) %}
{% if classes %}class="{% for c in classes %}{{ c }} {% endfor %}"{% endif %}
{% endmacro htmlClasses %}


{# set the id if its present #}
{% macro setID( id ) %}
{% if id %}id="{{ id }}"{% endif %}
{% endmacro setID %}


{# set data-attributes if present #}
{% macro setDataAttrib( dataAttributes ) %}
{% if dataAttributes %}data-{% for key, value in dataAttributes %}{{ key }}="{{ value }}"{% endfor %}{% endif %}
{% endmacro setDataAttrib %}




{# the src image #}
{% macro srcImg( srcImg, lazyload, lazyPattern ) %}
{% spaceless %}{% if lazyload %}
{% if lazyPattern == 'lqip' %}
data-src="/img{{ srcImg }}"
{% elseif lazyPattern == 'combined' %}
data-src="/img{{ srcImg }}"
{% elseif lazyPattern == 'simple'%}
src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
{% else %}src="/img{{ srcImg }}"{% endif %}{% else %}
src="/img{{ srcImg }}"{% endif %}
{% endspaceless %}
{% endmacro srcImg %}

